<%= Rouge::Themes::Base16.mode(:light).render(scope: '.highlight') %>

body {
  margin: 0;
  padding: 0;
  font-family: -apple-system,BlinkMacSystemFont,"Segoe UI",Roboto,"Helvetica Neue",Arial,sans-serif,"Apple Color Emoji","Segoe UI Emoji","Segoe UI Symbol","Noto Color Emoji";
  line-height: 1.5;
}

a {
  color: #5296b2;
  text-decoration: none;
  border-bottom: 2px solid #ddebf0;
  transition: all .2s ease-in-out;
}

a:hover {
  border-color: #5296b2;
}

p {
  margin: 0 0 2em;
}

main {
  width: 100%;
  max-width: 1024px;
  margin: 0 auto;
  padding: 40px 60px 60px;
}

pre {
  margin: 0 0 2em;
  padding: 30px;
  background: #f4f7fb;
  border: 1px solid #dfe3e6;
}

code {
  font-family: SFMono-Regular,Menlo,Monaco,Consolas,"Liberation Mono","Courier New",monospace;
  font-size: 15px;
}

iframe {
  margin: 0;
  height: 0;
  border: none;
}

h1 {
  margin: 0 0 1em;
  padding: 0 0 .5em;
  border-bottom: 2px solid #dfe3e6;
  color: #333;
  font-size: 50px;
  font-weight: 500;
}

h2 {
  color: #333;
  font-weight: 600;
}

ul,
ol {
  margin: 0 0 2em;
}

table {
  margin: 0 0 2em;
  border-collapse: collapse;
}

th,
td {
  padding: .6em 2em .6em 0;
  text-align: left;
}

th:last-child,
td:last-child {
  padding-right: 0;
}

th {
  border-bottom: 2px solid #dfe3e6;
}

td {
  border-bottom: 1px solid #dfe3e6;
}

hr {
  margin: 2em 0 0;
  padding: 2em 0 0;
  border: 1px solid #dfe3e6;
  border-width: 1px 0 0;
}

blockquote {
  padding-left: 25px;
  border-left: 3px solid #dfe3e6;
  color: #879097;
  font-style: italic;
}

nav {
  padding: 10px 30px 40px;
  background: #f4f7fb;
  min-width: 180px;
}

nav a {
  text-decoration: none;
  border-bottom: 2px solid transparent;
}

nav a:hover {
  border-bottom: 2px solid #a9cbd9;
}

nav ul {
  list-style: none;
  margin: 0;
  padding: 0;
  font-size: 18px;
  font-weight: 500;
}

nav > ul > li {
  display: block;
  margin: .6em 0 0;
  padding: .6em 0 0;
  box-shadow: 0 -1px 0 0 #dfe3e6;
}

nav > ul > li:first-child {
  box-shadow: none;
}

nav ul ul {
  margin: .6em 0;
  padding: 0 0;
  font-size: 15px;
  font-weight: 400;
}

nav ul ul ul {
  font-size: 14px;
  padding-left: 1em;
}

.example {
  display: grid;
  padding: 30px;
  border: 1px solid #dfe3e6;
  border-width: 1px 1px 0;
}

.grid-container {
  display: grid;
  width: 100%;
  height: 100vh;
  grid-gap: 0;
  grid-template-columns: auto 1fr;
}
